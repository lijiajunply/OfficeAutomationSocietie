.option {
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: block;
  box-sizing: content-box
}

.option-list {
  display: block;
}

.option-button {
  background-color: #007aff;
  color: #ffffff;
  padding: 10px 20px;
  border-radius: 5px;
  margin: 10px;
}

.username {
  width: 100%;
  /* height: 11%; */
  font-size: 24px;
  font-weight: bold;
  color: #333333;
  padding-bottom: 10px;
  padding-left: 15px;
  padding-right: 15px;
  margin-bottom: 1px;
}

.org {
  width: 100%;
  /* height: 11%; */
  font-weight: bold;
  color: #333333;
  padding-bottom: 10px;
  padding-left: 15px;
  padding-right: 15px;
  margin-bottom: 1px;
