/* pages/resourse/resourse.wxss */

.resourse-box {
  width: 50vh;
  flex: 1;
  height: 100%;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
  margin-bottom: 10px;
  overflow: hidden;
  display:flex;
  flex-direction: column;
}

.resourse-list {
  max-height: 100%;
  flex: 1;
  overflow-y: scroll;
}

.resourse-title {
  width: 100%;
  height: 20%;
  font-size: 24px;
  font-weight: bold;
  color: #333333;
  padding-bottom: 5px;
  margin-bottom: 1px;
  border-bottom: 1px solid #ccc;
}

.resourse-item {
  padding: 10px;
  margin-bottom: 10px;
  border-bottom: 1px solid #ccc;
}