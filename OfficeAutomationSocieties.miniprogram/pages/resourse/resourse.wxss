/* pages/resourse/resourse.wxss */

.resourse-box {
  width: 93%;
  flex: 1;
  height: 100%;
  margin: 0 auto;


  margin-bottom: 10px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.resourse-list {
  max-height: 100%;
  flex: 1;
  overflow-y: scroll;
}

.resourse-border {
  height: 500rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.resourse-title {
  width: 100%;
  height: 20%;
  font-size: 24px;
  font-weight: bold;
  color: #333333;
  margin-bottom: 1px;
  border-bottom: 1px solid #ccc;
  display: flex; 
  /* justify-content: center;  */
  align-items: center;
}

.resourse-item {
  padding: 10px;
  margin-bottom: 10px;
  border-bottom: 1px solid #ccc;
}