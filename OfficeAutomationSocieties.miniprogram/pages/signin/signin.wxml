<view class="container" style="align-items: center;padding: 200rpx 0;height: 80vh;">
  <form bindsubmit="login">
    <view class="login-box">
      <view class="title">
        OA
      </view>
      <view class="input-box">
        <input class="input" name="username" placeholder="手机号码" />
      </view>
      <view class="input-box">
        <input class="input" name="password" type="password" placeholder="密码" />
      </view>
      <button class="input-buttom" type="primary" form-type="submit" model:loading="{{isLoading}}">登录</button>
    </view>
  </form>
</view>
