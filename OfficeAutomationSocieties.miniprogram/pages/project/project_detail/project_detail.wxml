<!--pages/project/project_detail/project_detail.wxml-->
<navigation-bar back="{{true}}" color="black" background="#FFF"></navigation-bar>
<view>
  <view class="name">{{thisProject.name}}</view>
  <view class="introduce">{{thisProject.introduce}}</view>
</view>
<view class="container">
  <text wx:if="{{thisProject.ganttList.length === 0}}">
    <image src="/assets/empty.svg" alt="暂无数据" mode="scaleToFill"/>
    <text>
      当前项目无任务
    </text>
  </text>
  <block wx:else>
    <scroll-view class="tasks" type="list" scroll-y enable-flex>
        <view class="task" wx:for="{{thisProject.ganttList}}" wx:key="this">
          {{item.toDo}}
        </view>
    </scroll-view>
  </block>
</view>