<!--pages/project/project_detail/project_detail.wxml-->
<navigation-bar back="{{true}}" color="black" background="#FFF"></navigation-bar>
<view>
  <view class="name">{{thisProject.name}}</view>
  <view class="introduce">{{thisProject.introduce}}</view>
</view>
<view class="buttons">
  <!-- <view class="button">
    添加任务
  </view> -->
  <navigator url="../project_addtask/project_addtask?id={{thisProject.id}}" class="button">
    添加任务
  </navigator>
  <view class="button-delete">
    退出项目
  </view>
</view>
<view class="divLine"></view>
<view class="task-outline">
  <text wx:if="{{thisProject.ganttList.length === 0}}">
    <image src="/assets/empty.svg" alt="暂无数据" mode="scaleToFill" />
    <text>
      当前项目无任务
    </text>
  </text>
  <block wx:else>
    <scroll-view class="tasks" scroll-y refresher-enable>
      <view class="task-title">当前任务</view>
      <!-- 任务列表 -->
      <view class="task task-timeout" wx:for="{{timeOutTask}}">
        <p class="task-name">
          {{item.toDo}}
        </p>
        <p class="task-date">
        <p class="task-date-text">
          截止至
        </p>
        <p>
          {{item.endTimeFmt}}
        </p>
        </p>
      </view>
      <view class="task task-doing" wx:for="{{doingTask}}">
        <p class="task-name">
          {{item.toDo}}
        </p>
        <p class="task-date">
        <p class="task-date-text">
          截止至
        </p>
        <p>
          {{item.endTimeFmt}}
        </p>
        </p>
      </view>
      <view class="task task-todo" wx:for="{{willDoTask}}">
        <p class="task-name">
          {{item.toDo}}
        </p>
        <view class="task-date">
          <p class="task-date-text">
            截止至
          </p>
          <p>
            {{item.endTimeFmt}}
          </p>
        </view>
      </view>
    </scroll-view>
  </block>
</view>
<view class="task-outline">
    <scroll-view class="tasks" type="list" scroll-y enable-flex>
      <view class="task-title">项目人员</view>
      <view class="member-bottom" wx:for="{{members}}" wx:key="this">
        · {{item.name}}
      </view>
    </scroll-view>
</view>