<!--pages/project/project_addtask/project_addtask.wxml-->
<navigation-bar back="{{true}}" color="black" background="#FFF"></navigation-bar>
<mp-form-page title="添加任务" >

  <mp-form id="form">
    <mp-cells>
      <mp-cell title="任务名称">
        <input value="{{task.toDo}}"></input>
      </mp-cell>
      <mp-cell title="起始时间">
        <picker mode="date" value="{{task.starttime}}">
          <p>
            {{task.starttime?task.starttime:"-"}}
          </p>
        </picker>
      </mp-cell>
      <mp-cell title="结束时间">
        <picker mode="date" value="{{task.endtime}}">
          <p>
            {{task.endtime?task.endtime:"-"}}
          </p>
        </picker>
      </mp-cell>
    </mp-cells>
  </mp-form>
  <view slot="button">
    <button class="weui-btn" type="primary" bindtap="submitTask">确定</button>
  </view>
</mp-form-page>