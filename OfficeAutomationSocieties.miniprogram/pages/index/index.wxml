<!--index.wxml-->
<navigation-bar title="OA" back="{{false}}" color="black" background="#FFF" />

<view class="container">
  <view class="buttons">
    <navigator url="../project/project" open-type="navigate" class="button">我的项目</navigator>
    <navigator url="../organize/organize" open-type="navigate" class="button">我的组织</navigator>
  </view>
  <text wx:if="{{task.length === 0}}">
    当前无组织
  </text>
  <block wx:else>
    <scroll-view class="tasks" wx:for="{{task}}" wx:key="toDo">
      <!-- 任务列表 -->
      <view class="task">
        <text class="task-name">
          {{item.toDo}}
        </text>
      </view>
    </scroll-view>
  </block>
</view>