/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
}

.buttons {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin-bottom: 20px;
}

.button {
  background-color: #007aff;
  color: #ffffff;
  padding: 20px 13%;
  border-radius: 5px;
}

.tasks {
  width: 80%;
  max-height: 63vh;
}

.task {
  background-color: #72b6ff;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 5px;

  /* background-image: radial-gradient(circle 248px at center, #16d9e3 0%, #30c7ec 47%, #46aef7 100%); */
}

.task-title {
  width: 80%;
  height: auto;
  font-size: 14px;
  margin-bottom: 10rpx;
  /* background: linear-gradient(to right,#000,#fff); */
}

.task-name {
  font-size: 14px;
}
